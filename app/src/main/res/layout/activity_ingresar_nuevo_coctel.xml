<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    >

<Button
    android:id="@+id/btnAgregar"
    android:layout_width="176dp"
    android:layout_height="62dp"
    android:text="Agregar"
    android:textSize="18sp"
    tools:layout_constraintTop_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
   
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintVertical_bias="0.657"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />

<TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginEnd="19dp"
    android:layout_marginRight="19dp"
    android:layout_marginTop="29dp"
    android:layout_toLeftOf="@+id/btnAgregar"
    android:layout_toStartOf="@+id/btnAgregar"
    android:text="Nombre"
    android:textSize="18sp" />

<EditText
    android:id="@+id/editText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginEnd="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:ems="10"
    android:inputType="textPersonName" />

<EditText
    android:id="@+id/editDescripcion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:layout_below="@+id/editText"
    android:layout_alignLeft="@+id/editText"
    android:layout_alignStart="@+id/editText" />

<TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Descripción"
    android:textSize="18sp"
    android:layout_alignBaseline="@+id/editDescripcion"
    android:layout_alignBottom="@+id/editDescripcion"
    android:layout_alignLeft="@+id/textView4"
    android:layout_alignStart="@+id/textView4" />

<Spinner
    android:id="@+id/spinLicor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="29dp"
    android:layout_below="@+id/editDescripcion"
    android:layout_alignLeft="@+id/editDescripcion"
    android:layout_alignStart="@+id/editDescripcion"
    android:layout_alignRight="@+id/editDescripcion"
    android:layout_alignEnd="@+id/editDescripcion" />

<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/spinLicor"
    android:layout_alignLeft="@+id/textView5"
    android:layout_alignStart="@+id/textView5"
    android:text="Licor"
    android:textSize="18sp" />

<TextView
    android:id="@+id/textView7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ingrediente"
    android:textSize="18sp"
    android:layout_alignBottom="@+id/spinIngrediente"
    android:layout_alignLeft="@+id/textView6"
    android:layout_alignStart="@+id/textView6" />

<Spinner
    android:id="@+id/spinIngrediente"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/spinLicor"
    android:layout_alignLeft="@+id/spinLicor"
    android:layout_alignStart="@+id/spinLicor"
    android:layout_marginTop="20dp"
    android:layout_alignRight="@+id/spinLicor"
    android:layout_alignEnd="@+id/spinLicor" />

<Spinner
    android:id="@+id/spinner3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/spinIngrediente"
    android:layout_marginTop="17dp"
    android:layout_alignLeft="@+id/spinIngrediente"
    android:layout_alignStart="@+id/spinIngrediente"
    android:layout_alignRight="@+id/spinIngrediente"
    android:layout_alignEnd="@+id/spinIngrediente" />

<TextView
    android:id="@+id/textView8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/spinner3"
    android:layout_alignLeft="@+id/textView7"
    android:layout_alignStart="@+id/textView7"
    android:text="Implemento"
    android:textSize="18sp" />

<TextView
    android:id="@+id/textView9"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Preparación"
    android:textSize="18sp"
    android:layout_below="@+id/textView8"
    android:layout_alignLeft="@+id/textView8"
    android:layout_alignStart="@+id/textView8"
    android:layout_marginTop="33dp" />

<EditText
    android:id="@+id/editText3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textMultiLine"
    android:layout_alignBaseline="@+id/textView9"
    android:layout_alignBottom="@+id/textView9"
    android:layout_alignLeft="@+id/spinner3"
    android:layout_alignStart="@+id/spinner3" />

<Button
    android:id="@+id/btnAddImagen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Agregar Imagen"
    android:textSize="18sp"
    android:layout_marginBottom="15dp"
    android:layout_above="@+id/btnAgregar"
    android:layout_alignLeft="@+id/btnAgregar"
    android:layout_alignStart="@+id/btnAgregar" />

</RelativeLayout>
